<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>IPO Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <style>
        body {
            background-color: #f8f9fa;
            font-family: Arial, sans-serif;
        }
        .dashboard-container {
            max-width: 1200px;
            margin: auto;
            background: white;
            padding: 40px;
            border-radius: 15px;
            box-shadow: 0px 0px 15px rgba(0, 0, 0, 0.1);
        }
        .circles-wrapper {
            position: relative;
            width: 300px;
            height: 200px;
            margin: auto;
        }
        .circle {
            position: absolute;
            width: 120px;
            height: 120px;
            border-radius: 50%;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            text-align: center;
            font-size: 1.2rem;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.2);
            transition: transform 0.3s ease;
        }
        .circle:hover {
            transform: scale(1.05);
        }
        .circle .number {
            font-size: 24px;
            font-weight: bold;
            margin-bottom: 5px;
        }
        .circle .label {
            font-size: 12px;
            padding: 0 10px;
        }
        .total-ipo { 
            background-color: #ffa726;
            left: 90px;
            top: 0;
            z-index: 3;
        }
        .ipo-gain { 
            background-color: #00e5ff;
            right: 0;
            top: 80px;
            z-index: 2;
        }
        .ipo-loss { 
            background-color: #818cf8;
            left: 0;
            top: 80px;
            z-index: 1;
        }
        .quick-links-section {
            background: white;
            border-radius: 10px;
            padding: 20px;
        }
        .quick-link-item {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 15px 0;
            border-bottom: 1px solid #eef0f7;
        }
        .quick-link-item:last-child {
            border-bottom: none;
        }
        .link-content {
            display: flex;
            align-items: center;
            gap: 12px;
        }
        .link-icon {
            width: 40px;
            height: 40px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 500;
            color: #444;
        }
        .visit-btn {
            color: #6366f1;
            text-decoration: none;
            font-size: 14px;
            font-weight: 500;
        }
        .visit-btn:hover {
            text-decoration: underline;
        }
        .chart-container {
            width: 200px;
            height: 200px;
            margin: auto;
        }
        .legend-container {
            display: flex;
            justify-content: center;
            margin-top: 20px;
        }
        .legend-item {
            display: flex;
            align-items: center;
            margin-right: 20px;
        }
        .legend-item:last-child {
            margin-right: 0;
        }
        .legend-dot {
            width: 10px;
            height: 10px;
            border-radius: 50%;
            margin-right: 5px;
        }
        .upcoming-dot { background-color: #ffcc00; }
        .new-listed-dot { background-color: #3366ff; }
        .ongoing-dot { background-color: #6a0dad; }
    </style>
</head>
<body>
    <div class="container mt-5 dashboard-container">
        <h2 class="mb-4 text-start">Dashboard</h2>
        <div class="row align-items-center text-center">
            <div class="col-md-4">
                <h5>IPO Dashboard India</h5>
                <p class="text-muted">Adipiscing elit, sed do eiusmod tempor</p>
                <p class="text-success fw-bold">â†‘ 20 IPO in Gain</p>
                <div class="circles-wrapper">
                    <div class="circle total-ipo">
                        <div class="number">30</div>
                        <div class="label">Total IPO</div>
                    </div>
                    <div class="circle ipo-gain">
                        <div class="number">20</div>
                        <div class="label">IPO in Gain</div>
                    </div>
                    <div class="circle ipo-loss">
                        <div class="number">9</div>
                        <div class="label">IPO in Loss</div>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="quick-links-section">
                    <h5 class="text-start mb-4">Quick Links</h5>
                    <div class="quick-link-item">
                        <div class="link-content">
                            <div class="link-icon" style="background: #fee2e2;">NSE</div>
                            <span>NSE India</span>
                        </div>
                        <a href="#" class="visit-btn">Visit Now</a>
                    </div>
                    <div class="quick-link-item">
                        <div class="link-content">
                            <div class="link-icon" style="background: #e0e7ff;">BSE</div>
                            <span>BSE India</span>
                        </div>
                        <a href="#" class="visit-btn">Visit Now</a>
                    </div>
                    <div class="quick-link-item">
                        <div class="link-content">
                            <div class="link-icon" style="background: #dcfce7;">SEBI</div>
                            <span>SEBI</span>
                        </div>
                        <a href="#" class="visit-btn">Visit Now</a>
                    </div>
                    <div class="quick-link-item">
                        <div class="link-content">
                            <div class="link-icon" style="background: #f3e8ff;">MC</div>
                            <span>Money Control</span>
                        </div>
                        <a href="#" class="visit-btn">Visit Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <h5>Main Board IPO</h5>
                <p>From 1 Jan 2024</p>
                <div class="chart-container">
                    <canvas id="ipoChart"></canvas>
                </div>
                <div class="legend-container">
                    <div class="legend-item">
                        <div class="legend-dot upcoming-dot"></div>
                        <span>Upcoming (15)</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-dot new-listed-dot"></div>
                        <span>New Listed (25)</span>
                    </div>
                    <div class="legend-item">
                        <div class="legend-dot ongoing-dot"></div>
                        <span>Ongoing (2)</span>
                    </div>
                </div>
                <button class="btn btn-primary mt-3">View Report</button>
            </div>
        </div>
    </div>
    <script>
        var ctx = document.getElementById('ipoChart').getContext('2d');
        var ipoChart = new Chart(ctx, {
            type: 'doughnut',
            data: {
                labels: ['Upcoming', 'New Listed', 'Ongoing'],
                datasets: [{
                    data: [15, 25, 2],
                    backgroundColor: ['#ffcc00', '#3366ff', '#6a0dad'],
                    borderWidth: 2,
                    hoverOffset: 4
                }]
            },
            options: {
                responsive: true,
                maintainAspectRatio: false,
                cutout: '70%', // Makes the donut chart thinner
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        enabled: true,
                        callbacks: {
                            title: function(tooltipItem) {
                                return 'Afternoon';
                            },
                            label: function(context) {
                                return `${context.label}: ${context.raw}`;
                            }
                        }
                    }
                }
            }
        });
    </script>
</body>
</html>